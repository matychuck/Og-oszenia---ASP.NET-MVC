@model Ads.Models.Ad

@{
    ViewBag.Title = @Ads.Resources.Texts.Delete;
}

<h2>@Ads.Resources.Texts.Delete</h2>

<h3>@Ads.Resources.Texts.DeleteConfirmation</h3>
<div>
    <h4>@Ads.Resources.Texts.Ad</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User.Login)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Login)
        </dd>

        <dt>
            @Ads.Resources.Texts.Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Ads.Resources.Texts.Content
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            @Ads.Resources.Texts.DateOfInsert
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfInsert)
        </dd>

        <dt>
            @Ads.Resources.Texts.CategoryID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryID)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Ads.Resources.Texts.Delete class="btn btn-default" /> |
            @Html.ActionLink(@Ads.Resources.Texts.BackToList, "Index")
        </div>
    }
</div>
