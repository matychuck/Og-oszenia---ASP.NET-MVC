@model Ads.Models.Ad

@{
    ViewBag.Title = @Ads.Resources.Texts.Categories;
}

<h2>@Ads.Resources.Texts.ChooseCategory</h2>

@using (Html.BeginForm("ChooseCategory", "Ads", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" id="categoryAttribute">
            @Html.LabelFor(model => model.CategoryID, @Ads.Resources.Texts.Category, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" onchange="addAtributes()">
                @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@Ads.Resources.Texts.Select class="btn btn-default" />
            </div>
        </div>

    </div>
}