<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


@model Ads.Models.AdminMessage

@{
    ViewBag.Title = @Ads.Resources.Texts.Create;
}

<h2>@Ads.Resources.Texts.AddMsg</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Ads.Resources.Texts.AdminMsg</h4>
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form accept-charset="UTF-8" action="" method="POST">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Title, @Ads.Resources.Texts.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Content, @Ads.Resources.Texts.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                                </div>
                                <br />
                                <div style="margin-right:20px">
                                    @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control counted" } })
                                    @*<textarea class="form-control counted" name="message" placeholder="Type in your message" rows="6" cols="8" style="margin-right:500px;"></textarea>*@
                                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                </div>

                                <h6 class="pull-right" id="counter">@Ads.Resources.Texts.CharsRemaining</h6>
                                <button class="btn btn-info" type="submit">@Ads.Resources.Texts.Publish</button>
                                @*<input type="submit" value="Opublikuj wiadomosc" class="btn btn-default" />*@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink(@Ads.Resources.Texts.BackToList, "Index")
</div>






