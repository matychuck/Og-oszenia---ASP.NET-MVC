@model Ads.Models.Category

@{
    ViewBag.Title = @Ads.Resources.Texts.Category+": "+ @Ads.Resources.Texts.Details;
}

<h2>@Ads.Resources.Texts.Details</h2>

<div>
    <h4>@Ads.Resources.Texts.Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Ads.Resources.Texts.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Ads.Resources.Texts.ParentcategoryID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParentcategoryID)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(@Ads.Resources.Texts.Edit, "Edit", new { id = Model.CategoryID }) |
    @Html.ActionLink(@Ads.Resources.Texts.BackToList, "Index")
</p>
