@model Ads.Models.Category

@{
    ViewBag.Title = @Ads.Resources.Texts.Category+": "+ @Ads.Resources.Texts.Delete;
}

<h2>@Ads.Resources.Texts.Delete</h2>

<h3>@Ads.Resources.Texts.DeleteConfirmation?</h3>
<div>
    <h4>@Ads.Resources.Texts.Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Ads.Resources.Texts.Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Ads.Resources.Texts.ParentcategoryID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParentcategoryID)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@Ads.Resources.Texts.Delete class="btn btn-default" /> |
            @Html.ActionLink(@Ads.Resources.Texts.BackToList, "Index")
        </div>
    }
</div>
