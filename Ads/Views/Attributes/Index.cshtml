@model IEnumerable<Ads.Models.Attribute>

@Html.Partial("_AdminTabs")
<p>
    @Html.ActionLink(@Ads.Resources.Texts.DefineNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Ads.Resources.Texts.Category
        </th>
        <th>
            @Ads.Resources.Texts.Type
        </th>
        <th>
            @Ads.Resources.Texts.Name
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cat.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.ActionLink(@Ads.Resources.Texts.Edit, "Edit", new { id = item.AttributeID }) |
                @Html.ActionLink(@Ads.Resources.Texts.Details, "Details", new { id = item.AttributeID }) |
                @Html.ActionLink(@Ads.Resources.Texts.Delete, "Delete", new { id = item.AttributeID })
            </td>
        </tr>
    }

</table>

