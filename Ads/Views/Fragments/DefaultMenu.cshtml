
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink(Ads.Resources.Texts.MainPage, "Index", "Home")</li>
                <li>@Html.ActionLink(Ads.Resources.Texts.Categories, "Index", "Categories")</li>
                <li>@Html.ActionLink(@Ads.Resources.Texts.CreateAd, "ChooseCategory", "Ads")</li>
                <li>@Html.ActionLink(@Ads.Resources.Texts.Ads, "Index", "Ads")</li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @Ads.Resources.Texts.Language
                    </a>
                    <ul id="google_translate_element" class="dropdown-menu">
                        <li>@Html.ActionLink(Ads.Resources.Texts.LanguageEN, "Change", "Home", new { LanguageAbbreviation = "en" }, null)</li>
                        <li>@Html.ActionLink(Ads.Resources.Texts.LanguagePL, "Change", "Home", new { LanguageAbbreviation = "pl" }, null)</li>
                        <li>@Html.ActionLink(Ads.Resources.Texts.LanguageDE, "Change", "Home", new { LanguageAbbreviation = "de" }, null)</li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @Ads.Resources.Texts.Theme
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink(Ads.Resources.Texts.Default, "SetTheme", "Home", new { ThemeName = "default" }, null)</li>
                        <li>@Html.ActionLink(Ads.Resources.Texts.Dark, "SetTheme", "Home", new { ThemeName = "dark" }, null)</li>
                        <li>@Html.ActionLink(Ads.Resources.Texts.Royal, "SetTheme", "Home", new { ThemeName = "royal" }, null)</li>
                    </ul>
                </li>
            </ul>
            @if (Session["UserID"] == null)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink(Ads.Resources.Texts.Login, "Login", "Account")</li>
                    <li>@Html.ActionLink(Ads.Resources.Texts.Register, "Register", "Account")</li>
                </ul>
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @Ads.Resources.Texts.ProfileTitle
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="navbar-content">
                                    <div class="row">
                                        <div class="col-md-5">

                                            <p class="text-center small">
                                                <a href="/Account/ViewMyProfile" class="btn btn-primary btn-sm active">@Ads.Resources.Texts.ProfileShow</a>
                                            </p>
                                        </div>
                                        <div class="col-md-7">
                                            @Session["Email"]
                                            <p class="text-muted small">
                                                @Session["Name"] @Session["Surname"]
                                            </p>
                                            <div class="divider">
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="navbar-footer">
                                    <div class="navbar-footer-content">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <a href="/Account/ChangePassword" class="btn btn-default btn-sm">@Ads.Resources.Texts.ProfileChngPsswd</a>
                                            </div>
                                            <div class="col-md-6">
                                                <a href="/Account/Logout" class="btn btn-default btn-sm pull-right">@Ads.Resources.Texts.Logout</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            }


        </div>
    </div>
</div>


@*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@